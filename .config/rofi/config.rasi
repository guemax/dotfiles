configuration {
	font: "Iosevka 20";
	terminal: "alacritty";
	hover-select: true;
	kb-secondary-paste: "Control+y,Insert";
	kb-mode-next: "Super+n,Shift+Right,Control+Tab";
	kb-mode-previous: "Shift+Left,Control+ISO_Left_Tab";
	kb-page-prev: "Alt+v,Page_Up";
	kb-page-next: "Control+v,Page_Down";

  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}


//////////////////////////////////////////////////////////////////////
//                                                                  //
//                         --- Theming ---                          //
//                                                                  //
//////////////////////////////////////////////////////////////////////

window {
  background-color: #96a6c8;
  padding: 5;
}

mainbox {
  background-color: #282828;
}


//////////////////////////////////////////////////////////////////////
//                                                                  //
//                     --- Inputbar styling ---                     //
//                                                                  //
//////////////////////////////////////////////////////////////////////

inputbar {
  padding: 25 20;
}

inputbar, prompt {
  color: #ffdd33;
}

entry {
  color: #96a6c8;
}


//////////////////////////////////////////////////////////////////////
//                                                                  //
//                     --- Listview Styling ---                     //
//                                                                  //
//////////////////////////////////////////////////////////////////////

listview {
	background-color: #282828;
	scrollbar: false;
}

element {
	padding: 10 20;
}

// Styling for normal (and alternate) elements.
element normal.normal, element alternate.normal {
	color: #96a6c8;
	background-color: #282828;
}

element normal.active, element alternate.active {
	color: #ffdd33;
	background-color: #282828;
}

// Styling for selected elements.
element selected.normal {
	color: #282828;
	background-color: #96a6c8;
}

element selected.active {
	color: #282828;
	background-color: #ffdd33;
}
