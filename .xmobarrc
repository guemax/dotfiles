Config { overrideRedirect = False
       , font     = "xft:iosevka-16"
       , additionalFonts = [ "xft:FontAwesome:pixelsize=13" ]
       , bgColor  = "#282828"
       , fgColor  = "#96a6c8"
       , position = TopSize L 100 45
       , commands = [ Run Cpu
                        [ "-L", "3"
                        , "-H", "50"
                        , "--high"  , "red"
                        , "-t", "<fc=#ffdd33>CPU</fc> <total>%"
                        ] 10
                    , Run Alsa "default" "Master"
                        [ "-t", "<fc=#ffdd33>VOL</fc> <volumestatus>"
                        , "--suffix"  , "True"
                        , "--"
                        , "--on", ""
                        ]
                    , Run Memory ["-t", "<fc=#ffdd33>MEM</fc> <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "<fc=#ffdd33>TIME</fc> %H:%M" "date" 10
                    , Run XMonadLog
                    , Run Locks
                    , Run Wireless "wlp0s20f3" [ "-t", "<fc=#ffdd33>WIFI</fc> <essid> (<quality>)" ] 10
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%XMonadLog% }{ %locks%  %alsa:default:Master%  <fc=#52494e>|</fc>  %wlp0s20f3wi%  <fc=#52494e>|</fc>  %cpu%  <fc=#52494e>|</fc>  %memory%  <fc=#52494e>|</fc>  %date% "
       }
